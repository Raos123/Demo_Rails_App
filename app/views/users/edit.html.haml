- provide(:title, "Edit user")
%h1 Update your profile

.row
  .span6.offset3
    = form_for(@user) do |user|
      = render "form", user: user
      = user.submit "Save changes", class: "btn btn-large btn-primary"
      
    = gravatar_for @user
    %a{target:"_blank", href:"http://gravatar.com/emails"}change
