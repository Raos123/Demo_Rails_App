- provide(:title, @title)
.row
  %aside.span4
    %section
      = gravatar_for @user
      = content_tag(:h1, @user.name)
      %span
        = link_to "view my profile", @user
      %span
        %b Microposts
        = @user.microposts.count
    %section
      = render 'shared/stats'
    %section
      - if @users.any?
        .user_avatars
          - @users.each do |user|
            = link_to gravatar_for(user, size: 30), user
  .span8
    = content_tag(:h3, @title)
    - if @users.any?
      %ul.users
        = render @users
      = will_paginate
